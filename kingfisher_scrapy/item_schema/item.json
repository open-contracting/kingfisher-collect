{
  "$id": "item.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "KingfisherItem": {
      "type": "object",
      "properties": {
        "file_name": {
          "type": "string",
          "pattern": "^[^/]+$"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "file_name",
        "url"
      ]
    },
    "KingfisherFileItem": {
      "allOf": [
        {
          "$ref": "#/definitions/KingfisherItem"
        }
      ],
      "type": "object",
      "properties": {
        "data_type": {
          "type": "string",
          "enum": [
            "record",
            "release",
            "record_package",
            "release_package"
          ]
        },
        "encoding": {
          "type": "string"
        },
        "data": {
          "minLength": 1
        }
      },
      "required": [
        "data",
        "data_type"
      ]
    }
  }
}
